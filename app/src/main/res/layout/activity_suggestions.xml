<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#EDF0FF"
tools:context=".suggestion.controller.SuggestionsActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrowback"
        android:padding="15dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bell"
        android:padding="15dp"
        android:layout_alignParentRight="true"/>
  </RelativeLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView"
      android:text="Generating Suggestions..."
      android:textSize="30sp"
      android:textColor="#365EFF"
      android:fontFamily="sans-serif-medium"
      android:textAllCaps="true"
      android:padding="10sp"/>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_marginTop="10dp"
      android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_margin="20dp">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/s1_title"
          android:text="Suggestion 1"
          android:textSize="25sp"
          android:fontFamily="sans-serif-light"
          android:padding="25dp"/>


      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/s1_content"
          android:text="Generating Suggestion 1..."
          android:onClick="executeSuggestionOne"
          android:textAlignment="textStart"
          android:background="#00000000"
          android:padding="14dp"
          android:layout_alignParentBottom="true"
          android:gravity="start" />


    </RelativeLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/m1"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_marginTop="10dp"
      android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_margin="20dp">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/s2_title"
          android:text="Suggestion 2"
          android:textSize="25sp"
          android:fontFamily="sans-serif-light"
          android:padding="25dp"/>


      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/s2_content"
          android:text="Generating Suggestion 2..."
          android:onClick="executeSuggestionTwo"
          android:background="#00000000"
          android:gravity="start"
          android:padding="14dp"
          android:layout_alignParentBottom="true" />


    </RelativeLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/m2"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_marginTop="10dp"
      android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_margin="20dp">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/s3_title"
          android:text="Suggestion 3"
          android:textSize="25sp"
          android:fontFamily="sans-serif-light"
          android:padding="25dp"/>


      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/s3_content"
          android:text="Generating Suggestion 3..."
          android:onClick="executeSuggestionThree"
          android:gravity="start"
          android:background="#00000000"
          android:padding="14dp"
          android:layout_alignParentBottom="true" />


    </RelativeLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/m3"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

  </RelativeLayout>

</LinearLayout>

</ScrollView>